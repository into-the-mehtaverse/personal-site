	<script>
		(function() {
			const list = document.getElementById('journey-list');
			const toggle = document.getElementById('sort-toggle');
			let isAscending = false; // Start with descending (newest first)

			// Sort function
			function sortList() {
				const items = Array.from(list.children);
				const sorted = items.sort((a, b) => {
					const dateA = a.getAttribute('data-date');
					const dateB = b.getAttribute('data-date');
					return isAscending
						? dateA.localeCompare(dateB) // Ascending (oldest first)
						: dateB.localeCompare(dateA); // Descending (newest first)
				});
				sorted.forEach(item => list.appendChild(item));
				toggle.textContent = isAscending ? 'ascending / descending' : 'descending / ascending';
			}

			// Initial sort (descending by default - newest first)
			sortList();

			// Toggle on click
			toggle.addEventListener('click', () => {
				isAscending = !isAscending;
				sortList();
			});
		})();
	</script>
	<style>
		.journey-list {
			list-style: none;
			margin-left: 0;
			padding-left: 0;
		}

		.journey-list li {
			margin-bottom: 1rem;
		}

		.journey-list .date {
			font-weight: 700;
			color: var(--text-color);
		}

		.sort-toggle {
			background: transparent;
			border: none;
			color: var(--text-color);
			cursor: pointer;
			font-size: 0.9rem;
			margin-bottom: 1.5rem;
			padding: 0;
			text-decoration: underline;
			text-decoration-thickness: 1px;
			text-underline-offset: 2px;
			transition: opacity 0.2s;
			font-family: inherit;
		}

		.sort-toggle:hover {
			opacity: 0.7;
		}

		.redacted {
			background: var(--link-color);
			color: var(--link-color);
			border-radius: 2px;
			padding: 0 1px;
		}

		.redacted a {
			color: var(--link-color);
		}

		.index-social {
			margin-top: 1.75rem;
			display: flex;
			justify-content: center;
			gap: 0.75rem;
			width: 100%;
		}

		.index-social-link {
			color: var(--text-color);
			transition: opacity 0.2s;
		}

		.index-social-link:hover {
			opacity: 0.7;
		}

		.index-social-icon {
			width: 18px;
			height: 18px;
			display: block;
		}
	</style>
</BaseLayout>
