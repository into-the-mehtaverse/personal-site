---
interface Props {
	title?: string;
}

const { title = "Personal Site" } = Astro.props;
const currentPath = Astro.url.pathname;

const isActive = (path: string) => {
	if (path === '/' && currentPath === '/') return true;
	if (path !== '/' && currentPath.startsWith(path)) return true;
	return false;
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal site" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			(function() {
				// Initialize theme immediately before page renders to prevent flash
				const theme = localStorage.getItem('theme') || 'light';
				if (theme === 'dark') {
					document.documentElement.classList.add('dark');
				}
			})();
		</script>
	</head>
	<body>
		<div class="container">
			<header class="site-header">
				<h1 class="site-title">shaan mehta</h1>
			</header>
			<nav class="nav">
				<div class="nav-links">
					<a href="/" class={isActive('/') ? 'active' : ''}>home</a>
					<a href="/blog" class={isActive('/blog') ? 'active' : ''}>blog</a>
					<a href="/design" class={isActive('/design') ? 'active' : ''}>design</a>
				</div>
				<button class="theme-toggle" id="theme-toggle" aria-label="Toggle dark mode">
					<span class="theme-toggle-dot"></span>
				</button>
			</nav>
		<main class="main">
			<slot />
		</main>
	</div>
	<script>
		(function() {
			// Initialize theme - default to light mode
			const theme = localStorage.getItem('theme') || 'light';
			const html = document.documentElement;

			if (theme === 'dark') {
				html.classList.add('dark');
			} else {
				html.classList.remove('dark');
			}

			// Toggle theme
			const themeToggle = document.getElementById('theme-toggle');
			if (themeToggle) {
				themeToggle.addEventListener('click', () => {
					html.classList.toggle('dark');
					const isDark = html.classList.contains('dark');
					localStorage.setItem('theme', isDark ? 'dark' : 'light');
				});
			}
		})();
	</script>
</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--text-color: #130303;
		--bg-color: #FBF7F4;
		--link-color: #87a330;
		--link-hover: #004499;
		--border-color: #e0e0e0;
		--max-width: 42rem;
		--line-height: 1.7;
	}

	html.dark {
		--text-color: #e0e0e0;
		--bg-color: #1a1a1a;
		--link-color: #87a330;
		--link-hover: #66b3ff;
		--border-color: #333333;
	}

	html.dark blockquote {
		color: #999;
	}

	html {
		font-size: 16px;
	}

	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		background-color: var(--bg-color);
		color: var(--text-color);
		line-height: var(--line-height);
		padding: 4rem 1rem 2rem 1rem;
	}

	@media (max-width: 768px) {
		body {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		body {
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}

	.container {
		width: 40%;
		margin: 0 auto;
	}

	@media (max-width: 768px) {
		.container {
			width: 100%;
			max-width: 100%;
		}
	}

	.site-header {
		margin-bottom: 1.75rem;
	}

	.site-title {
		font-size: 1.75rem;
		font-weight: 700;
		text-align: left;
		margin: 0;
		padding: 0;
	}

	.nav {
		margin-bottom: 3rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.nav a {
		color: var(--text-color);
		text-decoration: none;
		font-size: 1.1rem;
		transition: opacity 0.2s;
	}

	.nav a:hover {
		opacity: 0.7;
	}

	.nav a.active {
		font-weight: 575;
	}

	.theme-toggle {
		width: 24px;
		height: 24px;
		border-radius: 50%;
		background-color: transparent;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0;
		transition: all 0.2s;
		border: none;
	}

	.theme-toggle:hover {
		opacity: 0.7;
	}

	.theme-toggle-dot {
		width: 10px;
		height: 10px;
		border-radius: 50%;
		background-color: var(--text-color);
		display: block;
	}

	.main {
		width: 100%;
	}

	h1 {
		font-size: 1.75rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	h2 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-top: 2rem;
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
		line-height: 1.3;
	}

	p {
		margin-bottom: 1rem;
	}

	a {
		color: var(--link-color);
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 2px;
		transition: opacity 0.2s;
	}

	a:hover {
		opacity: 0.8;
	}

	ul, ol {
		margin-left: 1.5rem;
		margin-bottom: 1rem;
	}

	li {
		margin-bottom: 0.5rem;
	}

	code {
		font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
		font-size: 0.9em;
		background-color: var(--border-color);
		padding: 0.125rem 0.25rem;
		border-radius: 3px;
	}

	pre {
		font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
		background-color: var(--border-color);
		padding: 1rem;
		border-radius: 4px;
		overflow-x: auto;
		margin-bottom: 1rem;
	}

	pre code {
		background-color: transparent;
		padding: 0;
	}

	blockquote {
		border-left: 3px solid var(--border-color);
		padding-left: 1rem;
		margin-left: 0;
		margin-bottom: 1rem;
		color: #666;
	}


	img {
		max-width: 100%;
		height: auto;
		margin: 1rem 0;
	}

	hr {
		border: none;
		border-top: 1px solid var(--border-color);
		margin: 2rem 0;
	}
</style>
