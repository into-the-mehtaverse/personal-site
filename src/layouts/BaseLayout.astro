---
interface Props {
	title?: string;
}

const { title = "Personal Site" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal site" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="nav">
			<a href="/">Welcome</a>
			<a href="/work">Work</a>
			<a href="/design">Design</a>
			<a href="/research">Research</a>
			<a href="/blog">Blog</a>
			<a href="/misc">Misc</a>
		</nav>
		<main class="main">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--text-color: #1a1a1a;
		--bg-color: #ffffff;
		--link-color: #0066cc;
		--link-hover: #004499;
		--border-color: #e0e0e0;
		--max-width: 42rem;
		--line-height: 1.7;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--text-color: #e0e0e0;
			--bg-color: #1a1a1a;
			--link-color: #4da6ff;
			--link-hover: #66b3ff;
			--border-color: #333333;
		}
	}

	html {
		font-size: 16px;
	}

	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		background-color: var(--bg-color);
		color: var(--text-color);
		line-height: var(--line-height);
		padding: 2rem 1rem;
	}

	.nav {
		max-width: var(--max-width);
		margin: 0 auto 3rem auto;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--border-color);
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	.nav a {
		color: var(--text-color);
		text-decoration: none;
		font-size: 0.9rem;
		transition: opacity 0.2s;
	}

	.nav a:hover {
		opacity: 0.7;
	}

	.main {
		max-width: var(--max-width);
		margin: 0 auto;
	}

	h1 {
		font-size: 1.75rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		line-height: 1.3;
	}

	h2 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-top: 2rem;
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
		line-height: 1.3;
	}

	p {
		margin-bottom: 1rem;
	}

	a {
		color: var(--link-color);
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 2px;
		transition: opacity 0.2s;
	}

	a:hover {
		opacity: 0.8;
	}

	ul, ol {
		margin-left: 1.5rem;
		margin-bottom: 1rem;
	}

	li {
		margin-bottom: 0.5rem;
	}

	code {
		font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
		font-size: 0.9em;
		background-color: var(--border-color);
		padding: 0.125rem 0.25rem;
		border-radius: 3px;
	}

	pre {
		font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
		background-color: var(--border-color);
		padding: 1rem;
		border-radius: 4px;
		overflow-x: auto;
		margin-bottom: 1rem;
	}

	pre code {
		background-color: transparent;
		padding: 0;
	}

	blockquote {
		border-left: 3px solid var(--border-color);
		padding-left: 1rem;
		margin-left: 0;
		margin-bottom: 1rem;
		color: #666;
	}

	@media (prefers-color-scheme: dark) {
		blockquote {
			color: #999;
		}
	}

	img {
		max-width: 100%;
		height: auto;
		margin: 1rem 0;
	}

	hr {
		border: none;
		border-top: 1px solid var(--border-color);
		margin: 2rem 0;
	}
</style>
